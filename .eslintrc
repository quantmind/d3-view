parser: babel-eslint

parserOptions:
  sourceType: module

env:
  es6: true
  browser: true
  node: true
  jest: true

extends:
  "eslint:recommended"

rules:
  no-cond-assign: 0
  no-floating-decimal: 2
  no-trailing-spaces: 2
  no-multiple-empty-lines:
    - 2
    - {max: 2, maxEOF: 0}
  eol-last: 2
  semi: 2
