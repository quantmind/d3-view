{
    "version": "0.1.5",
    "name": "d3-view",
    "description": "View-model d3 plugin for building interactive data-driven web interfaces",
    "author": {
        "name": "quantmind.com",
        "email": "message@quantmind.com"
    },
    "keywords": [],
    "license": "BSD-3-Clause",
    "repository": {
        "type": "git",
        "url": "https://github.com/quantmind/d3-view.git"
    },
    "engines": {
        "node": ">= 6.0"
    },
    "main": "dist/d3-view.min.js",
    "module": "index",
    "jsnext:main": "index",
    "dependencies": {
        "d3-array": "1",
        "d3-collection": "1",
        "d3-transition": "1",
        "d3-queue": "3",
        "d3-let": "0.2"
    },
    "devDependencies": {
        "babel-eslint": "7.1",
        "babel-preset-es2015": "6.18",
        "babel-preset-es2015-rollup": "rollup/babel-preset-es2015-rollup",
        "babelify": "7.3",
        "browserify": "13.1",
        "browserify-istanbul": "2.0",
        "eslint": "3.10",
        "handlebars": "4",
        "istanbul": "0.4",
        "karma": "1.3",
        "karma-browserify": "5.1",
        "karma-coverage": "1.1",
        "karma-chrome-launcher": "2.0",
        "karma-firefox-launcher": "1.0",
        "karma-phantomjs-launcher": "1.0",
        "karma-junit-reporter": "1.1",
        "karma-es5-shim": "0.0.4",
        "karma-jasmine": "1.0",
        "karma-safari-launcher": "1.0",
        "jasmine-core": "2.5",
        "package-preamble": "0.0",
        "phantomjs-prebuilt": "2.1",
        "publish": "0.6",
        "requirejs": "2.3",
        "rollup": "0.36",
        "rollup-plugin-json": "2.0",
        "rollup-plugin-node-resolve": "2.0",
        "rollup-plugin-babel": "2.6",
        "uglify-js": "2.7",
        "watchify": "3.7",
        "whatwg-fetch": "2.0"
    },
    "scripts": {
        "test": "npm run-script unit",
        "rollup": "rollup -c rollup.config.js --banner \"$(preamble)\"",
        "source": "npm run-script lint && npm run-script rollup && npm run-script cover",
        "build": "npm run-script source && npm run-script minify",
        "cover": "karma start test/karma/karma.cover.js",
        "lint": "eslint index.js test src examples",
        "minify": "uglifyjs --preamble \"$(preamble)\" build/d3-view.js -c -m -o build/d3-view.min.js",
        "unit": "karma start test/karma/karma.unit.js",
        "debug": "karma start test/karma/karma.debug.js",
        "zip": "rm -f build/d3-view.zip && zip -j build/d3-view.zip -- LICENSE README.md build/d3-view.js build/d3-view.min.js",
        "asset": "cd build && POST https://<upload_url>/repos/quantmind/d3-view/releases/:id/assets?name=d3-view.zip",
        "prepublish": "npm run-script rollup && npm run-script minify",
        "postpublish": "VERSION=`node -e 'console.log(require(\"./package.json\").version)'`; git push && git tag -am \"Release $VERSION.\" v${VERSION} && git push --tags",
        "release": "publish"
    }
}
