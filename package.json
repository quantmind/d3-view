{
    "name": "d3-view",
    "description": "View-model d3 plugin for building interactive data-driven web interfaces",
    "version": "0.1.1",
    "author": {
        "name": "quantmind.com",
        "email": "message@quantmind.com"
    },
    "keywords": [],
    "license": "BSD-3-Clause",
    "repository": {
        "type": "git",
        "url": "https://github.com/quantmind/d3-view.git"
    },
    "engines": {
        "node": ">= 6.0"
    },
    "main": "dist/d3-view.js",
    "module": "index",
    "jsnext:main": "index",
    "dependencies": {
        "d3-array": "1",
        "d3-collection": "1",
        "d3-transition": "1",
        "d3-queue": "3",
        "d3-let": "0.2.1"
    },
    "devDependencies": {
        "babel-eslint": "6.1",
        "babel-preset-es2015": "6.14",
        "babel-preset-es2015-rollup": "rollup/babel-preset-es2015-rollup",
        "babelify": "7.3",
        "browserify": "13.1",
        "browserify-istanbul": "2.0",
        "concat-files": "0.1",
        "eslint": "3.4",
        "handlebars": "4",
        "istanbul": "0.4",
        "karma": "1.2",
        "karma-browserify": "5.1",
        "karma-coverage": "1.1",
        "karma-chrome-launcher": "2.0",
        "karma-firefox-launcher": "1.0",
        "karma-phantomjs-launcher": "1.0",
        "karma-junit-reporter": "1.1",
        "karma-es5-shim": "0.0.4",
        "karma-jasmine": "1.0",
        "karma-safari-launcher": "1.0",
        "jasmine-core": "2.5",
        "package-preamble": "0.0",
        "phantomjs-prebuilt": "2.1",
        "requirejs": "2.3",
        "rollup": "0.34",
        "rollup-plugin-json": "2.0",
        "rollup-plugin-node-resolve": "2.0",
        "rollup-plugin-babel": "2.6",
        "uglify-js": "2.7",
        "watchify": "3.7",
        "whatwg-fetch": "0.11"
    },
    "scripts": {
        "test": "npm run-script unit",
        "rollup": "rollup -c build/rollup.config.js --banner \"$(preamble)\"",
        "d3": "rollup -c build/rollup.d3.js",
        "source": "npm run-script lint && npm run-script rollup && npm run-script cover",
        "build": "npm run-script source && npm run-script minify",
        "cover": "karma start build/karma.cover.js",
        "lint": "eslint index.js test src build examples",
        "annotate": "ng-annotate -a js/dist/fluidily.js -o fluidcloud/media/fluidcloud/fluidily.js",
        "concat": "node js/build/concat.js",
        "minify": "uglifyjs --preamble \"$(preamble)\" dist/d3-view.js -c -m -o dist/d3-view.min.js",
        "unit": "karma start build/karma.unit.js",
        "debug": "karma start build/karma.debug.js",
        "bundle": "npm run-script source && uglifyjs dist/d3-view.js -c -m -o dist/d3-view.min.js && rm -f dist/d3-view.zip && zip -j dist/d3-view.zip -- LICENSE README.md dist/d3-view.js dist/d3-view.min.js",
        "postpublish": "VERSION=`node -e 'console.log(require(\"./package.json\").version)'`; git push && git tag -am \"Release $VERSION.\" v${VERSION} && git push --tags"
    }
}
