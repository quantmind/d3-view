{
    "shell": {
        "source": {
            "command": "npm run-script source",
            "interactive": true
        }
    },
    "watch": {
        "js": {
            "files": [
                "index.js",
                "src/*.js",
                "src/**/*.js",
                "test/*.js"
            ],
            "command": [
                "js"
            ]
        }
    },
    "tasks": {
        "js": {
            "description": "Create the js files",
            "command": [
                "shell:source"
            ]
        },
        "dev": {
            "description": "Start development watch server",
            "command": ["watch"]
        }
    }
}
