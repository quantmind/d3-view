{
    "shell": {
        "source": {
            "command": "npm run-script source",
            "interactive": true
        }
    },
    "httpcopy": {
        "d3": {
            "description": "copy d3 index.js for d3 bundle",
            "src": [
                "https://raw.githubusercontent.com/d3/d3/master/index.js"
            ],
            "target": "{{ repo_path }}/d3.js"
        }
    },
    "watch": {
        "js": {
            "files": [
                "index.js",
                "src/*.js",
                "src/**/*.js",
                "test/*.js",
                "build/*.js"
            ],
            "command": [
                "js"
            ]
        }
    },
    "tasks": {
        "d3": {
            "description": "copy d3 index.js for d3 bundle",
            "command": ["httpcopy:d3"]
        },
        "js": {
            "description": "Create the js files",
            "command": [
                "shell:source"
            ]
        },
        "dev": {
            "description": "Start development watch server",
            "command": ["watch"]
        }
    }
}
